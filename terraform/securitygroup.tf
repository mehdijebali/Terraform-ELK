resource "aws_security_group" "allow_elk" {
  name        = var.SG_NAMES[1]
  description = var.SG_DESCRIPTIONS[1]

  # kibana ports
  ingress {
    from_port   = 5601
    to_port     = 5601
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  # outbound
  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
  tags = local.elk-sg-tags
}